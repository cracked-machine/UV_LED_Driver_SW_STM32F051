#include "RotaryEncoder.h"
#include "UvboxManager.h"

uint8_t RE_getPrevEncoderDir();


uint8_t previous_encoder_dir;

void RE_Setup()
{
	HAL_TIM_Base_Start(&htim2);
	previous_encoder_dir = (TIM2->CR1 & TIM_CR1_DIR);
}

uint8_t RE_getPrevEncoderDir()
{
	return previous_encoder_dir;
}

void RE_setPrevEncoderDir(uint8_t value)
{
	previous_encoder_dir = value;
}
